<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/cardViewMargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/constraintLayoutHeight">

            <ImageView
                android:id="@+id/imgIlceLogo"
                android:layout_width="@dimen/cardViewImageWidth"
                android:layout_height="@dimen/cardViewImageHeight"
                android:layout_marginTop="@dimen/card_padding"
                android:background="@color/cardViewImageBackground"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.064"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.333"
                app:srcCompat="@color/black" />

            <TextView
                android:id="@+id/txtIlceAdiBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardViewTextMarginStart"
                android:layout_marginLeft="@dimen/cardViewTextMarginLeft"
                android:layout_marginTop="@dimen/cardViewTextMarginTop"
                android:text="@string/txtIlceAdiBaslik"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtIlceAdi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardTextMarginStart"
                android:layout_marginLeft="@dimen/cardTextMarginLeft"
                android:layout_marginTop="@dimen/cardTextMarginTop"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtIlceAdiBaslik"
                tools:text="IlceAdi" />

            <TextView
                android:id="@+id/txtMeshur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtMeshurBaslik"
                tools:text="SÃ¼rmene Pidesi" />

            <TextView
                android:id="@+id/txtNufus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardText2MarginStart"
                android:layout_marginLeft="@dimen/cardText2MarginLeft"
                android:layout_marginTop="@dimen/cardText2MarginTop"
                android:text="26.824"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtNufusBaslik" />

            <TextView
                android:id="@+id/txtNufusBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="@string/txtNufusu"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtIlceAdi" />

            <TextView
                android:id="@+id/txtMeshurBaslik"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/cardText3MarginStart"
                android:layout_marginLeft="@dimen/cardText3MarginLeft"
                android:layout_marginTop="@dimen/cardText3MarginTop"
                app:layout_constraintStart_toEndOf="@+id/imgIlceLogo"
                app:layout_constraintTop_toBottomOf="@+id/txtNufus"
                android:text="@string/txtMeshurYemegi" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>